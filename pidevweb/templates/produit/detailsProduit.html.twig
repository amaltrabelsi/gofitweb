{% extends 'base.html.twig' %}

{% block body %}

    <div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">
        <style>
            .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
            .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        </style>

        <div class="example-wrapper">
            <div class="card mb-6" style="max-width:700px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{ asset('../assets/images/' ~ detail.pathImage) }}" class="img-fluid rounded-start" alt="image" />

                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Réference:  {{ detail.refP }}</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Nom du produit:  {{ detail.nomProduit }}</li>
                                <li class="list-group-item">Prix: {{ detail.prixUni }} DT</li>
                                <li class="list-group-item">Catégorie: {{ detail.categorie }}</li>
                                <li class="list-group-item">Quantié: {{ detail.quantite }}</li>
                                <li class="list-group-item">Evaluation: {{ detail.note }}</li>
                                <li class="list-group-item">Description: {{ detail.description }}</li>
                            </ul>

                        </div>
                        <p> <a class="btn btn-primary" href="#" role="button">Link</a></p>
                    </div>
                </div>
            </div>






        </div>
    </div>
{% endblock %}
