{% extends 'base.html.twig' %}

{% block title %}Actualités!{% endblock %}
{% block header %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-message">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}
{% block body %}


    <div class="empty"></div>
    extra &nbsp;&nbsp; space
    <div class="empty"></div>

    extra &nbsp;&nbsp; space
    <div class="empty"></div>

    extra &nbsp;&nbsp; space
    <div class="page-wrapper" style="min-height: 656px;">
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h3 class="text-themecolor">Gérer les Actualités</h3>
                </div>
                <div class="col-md-7 align-self-center">
                    <a href="{{ '/createActualite' }}" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Ajouter Actualité</a>
                </div>
            </div>

            <div class="row">
                <div class="col-12">

                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex">
                                <div>
                                    <h4 class="card-title"><span class="lstick"></span>Actualités</h4>
                                </div>
                            </div>


                            <table class="table">
                                <tr>
                                    <th><b>Titre  </b></th>
                                    <th><b>Description  </b></th>
                                    <th><b>Contenu   </b></th>
                                    <th><b>Categorie  </b></th>
                                    <th><b>Path_Image  </b></th>
                                    <th><b>Supprimer  </b></th>
                                    <th><b>Modifier  </b></th>


                                </tr>
                                </thead>
                                <tbody>
                                {% for Actualite in p %}
                                    <tr>
                                        <td>{{ Actualite.titre}}</td>
                                        <td>{{ Actualite.description}}</td>
                                        <td>{{ Actualite.contenu}}</td>
                                        <td>{{ Actualite.categorie }}</td>
                                        <td>{{Actualite.pathImage }}</td>
                                        <td>
                                            <a
                                                    class="btn waves-effect waves-light btn-info hidden-md-down text-white"
                                                    class="btn btn-danger" href="{{ path('deleteActualite',{'id':Actualite.actualiteId}) }}">
                                                <i
                                                        class="mdi mdi-delete-empty"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a
                                                    class="btn waves-effect waves-light btn-info hidden-md-down text-white"
                                                    class="btn" href="{{ path('editActualite',{'id':Actualite.actualiteId}) }}">


                                                <i
                                                        class="mdi mdi-account-edit"></i>
                                            </a>

                                        </td>

                                    </tr>

                                {% endfor %}
                                </tbody>
                            </table>
                        </div></div></div></div></div></div></div>

    <div>
        <div class="col-md-7 align-self-center">
        </div>
    </div><
    </div>

{% endblock %}
