

{% extends 'base.html.twig' %}

{% block body %}
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Gérer les Commandes</h3>
        </div>

    </div>
    <div class="page-wrapper" style="min-height: 656px;">
        <!-- ============================================================== -->
