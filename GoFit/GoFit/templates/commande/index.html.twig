                                            <td>{{ commande.dateC |date('d-m-Y')}}</td>
                                            <td>{{ commande.total }}</td>
                                            <td>{{ commande.nbProduit }}</td>
                                            <td>{{ commande.modePaiement }}</td>
                                            <td>{{ commande.fkClientpan.prenom ~" " ~ commande.fkClientpan.nom }}</td>
                                            <td>{{ commande.fkClientpan.email }}</td>


                                            <td>
                                                <a


                                                        class="btn waves-effect waves-light btn-info hidden-md-down text-white"
                                                        class="btn btn-center" href="{{ path('modifierCommande',{'id':commande.commandeId})}}">
                                                    <i
                                                            class="mdi mdi-email"></i></a>





                                            </td>


                                        </tr>

                                    {% endfor %}

